{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@Modules/*": ["modules/*"],
      "@Shared/*": ["shared/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  }
}